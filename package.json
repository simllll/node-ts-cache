{
	"name": "node-ts-cache",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm -r run build",
		"check-package-updates": "ncu -u && gulp updatePackages",
		"format": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
		"format:fix": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
		"lint": "eslint ts-cache/src storages/*/src",
		"lint:fix": "eslint ts-cache/src storages/*/src --fix",
		"test": "pnpm -r run test",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm build && pnpm test && changeset publish"
	},
	"dependencies": {
		"del": "^6.0.0",
		"glob": "^7.2.0",
		"gulp": "^4.0.2",
		"prettier": "^3.4.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.0",
		"@types/node": "^20.0.0",
		"eslint": "^9.17.0",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.19.0",
		"vitest": "^2.1.0"
	},
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=18.0.0"
	}
}
